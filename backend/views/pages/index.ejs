            <a class="nav-link active" aria-current="page" href="/">Organizations</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Capital One Benefits</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <h3 style="text-align: center; padding: 20px">Donations</h3>

  <div class="row height d-flex justify-content-center align-items-center">

    <div class="col-md-6">

      <div class="form">
        <i class="fa fa-search"></i>
        <input type="text" class="form-control form-input" placeholder="Search anything...">
        <span>
          <button type="submit" class="btn btn-light">
            <img src="images/search.png" alt="" style="height: 20px; width: 20px;">
          </button>
        </span>
      </div>

    </div>

  </div>

  
  <div class="card-container">
    <% records.map(record => { %>
      <div class="card" style="width: 18rem;">
        <img src="/images/<%= record.image_name.value%>.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= record.name.value%></h5>
          <p class="card-text"><%= record.description.value%></p>
          <p><h6>Location: </h6><%= record.Text_1.value%></p>
        
          <!-- Button trigger modal -->
          <a href="/payment"><button  type="button" class="btn btn-primary">Donate</button></a>
          &nbsp;
          <a href="/organization/<%= record.$id.value%>">Know more</a>
        </div>
      </div>
      <%})%>
    

  </div>

